@{
    ViewData["Title"] = "Your Cart";
}

<div class="min-h-screen bg-gray-100 p-6">
    <div class="max-w-7xl mx-auto">
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-3xl font-bold text-gray-800 mb-6">Your Cart 🛒</h2>

            <div class="space-y-4">
                <div class="flex justify-between items-center">
                    <p class="text-lg font-semibold text-gray-800">Burger</p>
                    <p class="text-xl font-bold text-gray-800">1 x $5.99</p>
                </div>

                <div class="flex justify-between items-center">
                    <p class="text-lg font-semibold text-gray-800">Pizza</p>
                    <p class="text-xl font-bold text-gray-800">2 x $8.99</p>
                </div>
            </div>

            <div class="mt-6">
                <p class="text-xl font-semibold text-gray-800">Total: $23.97</p>
                <button class="mt-4 w-full bg-green-500 text-white py-2 rounded hover:bg-green-600 transition">Proceed to Checkout</button>
            </div>
        </div>
    </div>
</div>
