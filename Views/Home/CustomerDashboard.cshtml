@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="min-h-screen bg-gray-100 p-6">
    <div class="max-w-7xl mx-auto">
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-3xl font-bold text-gray-800 mb-6">Welcome, Customer! 👋</h2>

            <div class="text-right mb-6">
                <a href="@Url.Action("ViewCart", "Home")" class="bg-green-500 text-white py-2 px-4 rounded-full">
                    Cart (<span id="cart-item-count">0</span>)
                </a>
            </div>

            <h3 class="text-xl font-semibold text-gray-700 mb-4">Available Food Items</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
