<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Campus Food Delivery</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50 text-gray-800 min-h-screen flex flex-col">
    <!-- Navbar -->
    <header class="bg-white shadow-md">
        <div class="container mx-auto px-4 py-3 flex justify-between items-center">
            <a class="flex items-center space-x-2" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="https://cdn-icons-png.flaticon.com/512/4039/4039232.png" alt="Logo" class="h-8 w-8">
                <span class="text-xl font-bold text-gray-800">Campus<span class="text-blue-600">FoodDelivery</span></span>
            </a>

            <nav>
                <a class="text-gray-600 hover:text-blue-500 transition duration-300 font-medium px-4 py-2 rounded-lg border border-gray-200 hover:border-blue-300" asp-area="" asp-controller="Home" asp-action="Login">
                    <i class="fas fa-user mr-1"></i> Login
                </a>
            </nav>
        </div>
    </header>

    <!-- Page Content -->
    <main class="container mx-auto px-4 py-6 flex-grow">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t mt-8">
        <div class="container mx-auto px-4 py-4">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="flex items-center mb-4 md:mb-0">
                    <img src="https://cdn-icons-png.flaticon.com/512/4039/4039232.png" alt="Logo" class="h-6 w-6 mr-2">
                    <span class="text-gray-700 font-medium">CampusFoodDelivery</span>
                </div>
                <div class="text-sm text-gray-500">
                    &copy; 2025 - CampusFoodDelivery. All rights reserved.
                </div>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
