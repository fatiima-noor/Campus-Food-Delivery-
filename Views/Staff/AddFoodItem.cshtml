@{
    ViewData["Title"] = "Add Food Item";
}

<div class="min-h-screen bg-gray-100 p-6">
    <div class="max-w-7xl mx-auto">
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-3xl font-bold text-gray-800 mb-6">Add New Food Item</h2>

            <form method="post" action="@Url.Action("AddFoodItem", "Staff")">
                <div class="mb-4">
                    <label for="name" class="block text-lg font-semibold text-gray-700">Food Name</label>
                    <input type="text" id="name" name="name" class="w-full p-3 border border-gray-300 rounded-lg" required>
                </div>

                <div class="mb-4">
                    <label for="description" class="block text-lg font-semibold text-gray-700">Food Description</label>
                    <textarea id="description" name="description" class="w-full p-3 border border-gray-300 rounded-lg" required></textarea>
                </div>

                <div class="mb-4">
                    <label for="price" class="block text-lg font-semibold text-gray-700">Price</label>
                    <input type="number" id="price" name="price" class="w-full p-3 border border-gray-300 rounded-lg" required>
                </div>

                <div class="mb-4">
                    <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600 transition">
                        Add Food Item
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
