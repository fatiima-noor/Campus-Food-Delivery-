@{
    ViewData["Title"] = "Staff Dashboard";
}

<div class="min-h-screen bg-gray-100 p-8">
    <div class="max-w-4xl mx-auto bg-white rounded-lg shadow p-8">
        <h2 class="text-3xl font-bold text-gray-800 mb-8">Welcome, Staff!</h2>

        <!-- Manage Food Items Section -->
        <div class="mb-10">
            <h3 class="text-xl font-semibold text-gray-700 mb-4">Manage Food Items</h3>
            <div class="flex flex-col md:flex-row gap-4">
                <a href="@Url.Action("AddFoodItem", "Staff")"
                   class="bg-blue-600 text-white text-center px-6 py-3 rounded-md hover:bg-blue-700 transition">
                    Add New Food Item
                </a>

                <a href="@Url.Action("ManageFoodItems", "Staff")"
                   class="bg-green-600 text-white text-center px-6 py-3 rounded-md hover:bg-green-700 transition">
                    View All Food Items
                </a>
            </div>
        </div>

        <!-- Orders Section -->
        <div>
            <h3 class="text-xl font-semibold text-gray-700 mb-4">Pending Orders</h3>
            <a href="@Url.Action("ViewOrders", "Staff")"
               class="bg-yellow-500 text-white text-center px-6 py-3 rounded-md hover:bg-yellow-600 transition inline-block">
                View All Orders
            </a>
        </div>
    </div>
</div>
